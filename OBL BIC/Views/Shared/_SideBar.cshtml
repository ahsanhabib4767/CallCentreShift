@*Role Wise Menu Item Generation*@
@{
    string curRole = Context.Session.GetString("CurrentUserRole");
    string curUserName = Context.Session.GetString("LoggedUserName");
    string type = Context.Session.GetString("USERTYPE");
    string branch = Context.Session.GetString("USERTYPE");
}

<aside class="main-sidebar sidebar-dark-primary elevation-4" style="background: #465b6b">
    @*sidebar-dark-primary*@
    <!-- Brand Logo -->
    <a href="#" class="brand-link" style="background: #2f3e4a; height: 58px">
        <img src="~/lib/Images/ONEBank_Logo.png" alt="ONE Bank Ltd." class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light"><strong><marquee>ONE Bank Ltd.</marquee></strong></span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="" class="img-circle elevation-2" alt="">
            </div>
            <div class="info">

                <a href="#" class="d-block" style="color:whitesmoke">
                    <i class="fa-solid fa-user"></i> @curUserName
                    <br>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;ID: @User.Identity.Name
                </a>
                <a href="#" class="d-block" style="color:whitesmoke">
                    <i class="fa-solid fa-user"></i> @curUserName
                </a>
            </div>
        </div>

        <!-- SidebarSearch Form -->
        <div class="form-inline">
            <div class="input-group" data-widget="sidebar-search">
                <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-sidebar">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                @if (type == "Administrator")
                {
                    <li class="nav-item has-treeview">
                        <a is-active-page asp-area="Reports" asp-page="" class="nav-link">
                            <i class="nav-icon fas fa-book"></i>
                            <p>
                                Fee Collection
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>

                        <a class="nav-link">
                            <i class="fa-solid fa-gear"></i> &nbsp;
                            <p>
                                Fee Collection
                            </p>
                        </a>
                        <a asp-area="" asp-controller="Transaction" asp-action="CustomerInfo" class="nav-link">
                            <i class="fa-solid fa-pen-to-square"></i> &nbsp;
                            <p>
                                Student Fee Collection
                            </p>
                        </a>

                        <a asp-area="" asp-controller="Transaction" asp-action="ListofCustomerInfo" class="nav-link">
                            <i class="fa-solid fa-list"></i> &nbsp;
                            <p>
                                Pending Fee Lists
                            </p>
                        </a>
                        <a asp-area="" asp-controller="Transaction" asp-action="ListofCustomerInfoForConfirm" class="nav-link">
                            <i class="fa-solid fa-list"></i> &nbsp;
                            <p>
                                Collected Fee List
                            </p>
                        </a>
                        <a asp-area="" asp-controller="Report" asp-action="Index" class="nav-link">
                            <i class="fa-solid fa-list"></i> &nbsp;
                            <p>
                                Report
                            </p>
                        </a>
                    </li>
                    <li class="nav-item menu">

                        <a class="nav-link">
                            <i class="fa-solid fa-gear"></i> &nbsp;
                            <p>
                                Security
                            </p>
                        </a>
                        <a asp-area="" asp-controller="User" asp-action="Index" class="nav-link">
                            <i class="fa-solid fa-pen-to-square"></i> &nbsp;
                            <p>
                                User Creation
                            </p>
                        </a>
                    </li>
                    <li class="nav-item menu">

                        <a class="nav-link">
                            <i class="fa-solid fa-gear"></i> &nbsp;
                            <p>
                                Report
                            </p>
                        </a>
                        <a asp-area="" asp-controller="Report" asp-action="Index" class="nav-link">
                            <i class="fa-solid fa-pen-to-square"></i> &nbsp;
                            <p>
                                Collection
                            </p>
                        </a>
                    </li>
                    }
                else if(type=="Standard"){

                     <li class="nav-item has-treeview">
                            <a is-active-page asp-area="Reports" asp-page="/DPSCollBranchReports" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Fee Collection
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                    @*<li class="nav-item menu">*@

                        <a asp-area="" asp-controller="Transaction" asp-action="CustomerInfo" class="nav-link">
                            <i class="fa-solid fa-pen-to-square"></i> &nbsp;
                            <p>
                                Student Fee Collection
                            </p>
                        </a>

                        <a asp-area="" asp-controller="Transaction" asp-action="ListofCustomerInfo" class="nav-link">
                            <i class="fa-solid fa-list"></i> &nbsp;
                            <p>
                                Pending Fee Lists
                            </p>
                        </a>
                        <a asp-area="" asp-controller="Transaction" asp-action="ListofCustomerInfoForConfirm" class="nav-link">
                            <i class="fa-solid fa-list"></i> &nbsp;
                            <p>
                                Collected Fee List
                            </p>
                        </a>
                      
                    </li>
                }
                    </ul>
                

        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>