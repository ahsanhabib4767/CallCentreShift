@using OBL.BIC.Models;
@model IEnumerable<AccBengalInsuranceTransactionLog>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{

}

@{
    ViewData["Title"] = "Transaction List";
}

    <div class="p-4 rounded border">
        <div class="row">
            <div class="col-12 card">
                <div class="card-content">
                    <div class="m-5">
                        <div class="p-4 rounded border">
                            <table data-order='[[ 0, "asc" ]]' id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Transaction Date</th>
                                        <th>Transaction No</th>
                                        <th>Customer Name</th>
                                        <th>Total Payment Amount</th>
                                        <th>Student ID</th>
                                        <th>Branch Code</th>
                                        <th>Status</th>
                                      
                                    </tr>
                                </thead>
                                @if (ViewBag.TableData != null)
                                    {
                                <tbody>
                                    @foreach (var item in ViewBag.TableData)
                                    {
                                        <tr>
                                            <td>@item.TranDate.ToString("dd-MM-yyyy")</td>
                                            <td>@item.TranNo</td>
                                            <td>@item.CustomerName</td>
                                            <td>@item.TotalPaymentAmount</td>
                                            <td>@item.CustomerId</td>
                                            <td>@item.BranchCode</td>
                                            @if (item.IsPosted == false && item.IsDelete == false)
                                            {
                                                <td style="color:red">
                                                    Not Posted
                                            </td>
                                            }else if (item.IsPosted == true && item.IsDelete == false)
                                            {
                                                <td style="color:#0000ff">
                                                    Posted
                                                </td>
                                            }else if (item.IsDelete == true)
                                            {
                                                <td>
                                                    Cancelled
                                                </td>
                                            }
                                            else
                                            {
                                                <td>None</td>
                                            } 
                                        </tr>
                                    }
                                </tbody>
                                }
                                else{
                                    <tbody></tbody>
                                }
                            
                            </table>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

